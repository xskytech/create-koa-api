{
  "name": "@xskytech/xsky-koa-api",
  "version": "1.0.0",
  "description": "Flexible Koa API",
  "main": "./src/index.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon .",
    "start": "node .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "validate": "npm run lint",
    "db:migrate": "sequelize db:create && sequelize db:migrate && sequelize db:seed:all",
    "db:drop": "sequelize db:drop"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate",
      "pre-push": "npm run validate"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:xskytech/xsky-koa-api.git"
  },
  "bugs": {
    "url": "https://github.com/xskytech/xsky-koa-api/issues"
  },
  "homepage": "https://github.com/xskytech/xsky-koa-api#readme",
  "keywords": [
    "api",
    "boilerplate",
    "koa",
    "rest",
    "xsky",
    "xskytech"
  ],
  "author":  {
    "name": "Narek Keryan",
    "email": "narek.keryan@gmail.com",
    "url": "http://nkgdev.com"
  },
  "bin": "./bin/index.js",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "dotenv": "^8.0.0",
    "fs-extra": "^8.0.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-respond": "^2.1.0",
    "koa-router": "^7.4.0",
    "log4js": "^4.3.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "husky": "^2.3.0",
    "nodemon": "^1.19.0"
  }
}
